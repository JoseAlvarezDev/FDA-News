---
import Layout from "../layouts/Layout.astro";
import GlassCard from "../components/GlassCard.astro";
import { getLatestNews } from "../lib/fda";
import { format } from "date-fns";
import { ExternalLink, Newspaper } from "@lucide/astro";

const news = await getLatestNews();

function formatDate(dateStr: string | undefined) {
    if (!dateStr) return "";
    try {
        // OpenFDA dates are YYYYMMDD
        if (dateStr.length === 8) {
            const year = dateStr.substring(0, 4);
            const month = dateStr.substring(4, 6);
            const day = dateStr.substring(6, 8);
            return format(new Date(`${year}-${month}-${day}`), "MMM dd, yyyy");
        }
        return format(new Date(dateStr), "MMM dd, yyyy â€¢ h:mm a");
    } catch (e) {
        return dateStr;
    }
}
---

<Layout title="News Feed">
    <div class="page-header">
        <h1>FDA News Feed</h1>
        <p class="subtitle">
            Latest press releases and announcements directly from the FDA
        </p>
    </div>

    <div class="news-container">
        {
            news.map((item: any) => (
                <GlassCard className="news-card">
                    <div class="news-content">
                        <div class="news-meta">
                            <Newspaper size={16} />
                            <span>{formatDate(item.pubDate)}</span>
                        </div>
                        <h2>{item.title}</h2>
                        <p class="snippet">{item.contentSnippet}</p>
                        <a
                            href={item.link}
                            target="_blank"
                            rel="noopener noreferrer"
                            class="read-more"
                        >
                            Read official release <ExternalLink size={14} />
                        </a>
                    </div>
                </GlassCard>
            ))
        }
    </div>
</Layout>

<style>
    .page-header {
        margin-bottom: 3rem;
    }

    h1 {
        font-size: 2.5rem;
        margin-bottom: 0.5rem;
        background: linear-gradient(to right, #fff, #94a3b8);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .news-container {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
        max-width: 800px;
    }

    .news-card {
        transition: background 0.2s;
    }

    .news-card:hover {
        background: rgba(30, 41, 59, 0.6);
    }

    .news-meta {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        color: var(--color-accent);
        font-size: 0.85rem;
        margin-bottom: 0.75rem;
    }

    h2 {
        margin: 0 0 1rem 0;
        font-size: 1.4rem;
        line-height: 1.4;
    }

    .snippet {
        color: var(--color-text-secondary);
        line-height: 1.6;
        margin-bottom: 1.5rem;
    }

    .read-more {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        color: var(--color-text-primary);
        border: 1px solid var(--glass-border);
        padding: 0.5rem 1rem;
        border-radius: 6px;
        font-size: 0.9rem;
        transition: all 0.2s;
    }

    .read-more:hover {
        background: rgba(255, 255, 255, 0.1);
    }
</style>
